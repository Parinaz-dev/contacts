var person = {
  name : "pari",
  age : 22,
  hoobies : ["music" , "coding" , "reading"],//array 
  address : { //object
    city : "alborz",
    zip : 41,
  },
  sayhello : function() { //function
    console.log(`hi my name is , ${person.name}`);
    return;
  }
};

console.log(person.sayhello());




